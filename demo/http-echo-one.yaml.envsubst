apiVersion: v1
kind: Service
metadata:
  name: http-echo-one
spec:
  ports:
  - port: 80
    targetPort: 5678
  selector:
    app: http-echo-one
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: http-echo-one
spec:
  selector:
    matchLabels:
      app: http-echo-one
  replicas: 1
  template:
    metadata:
      labels:
        app: http-echo-one
    spec:
      containers:
      - name: http-echo-one
        image: hashicorp/http-echo
        args:
        - "-text=http-echo-one"
        ports:
        - containerPort: 5678
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: http-echo-one 
spec:
  rules:
  - host: http-echo-one-$SESSION_NAME.$INGRESS_DOMAIN 
    http:
      paths:
      - pathType: ImplementationSpecific
        backend:
          service:
            name: http-echo-one 
            port:
              number: 80